@model HeroBannerViewModel

@if (Model is not null)
{
    <!-- Hero Banner -->
    <section class="relative h-screen flex items-center"
        style="background-image: url('@Model.BackgroundImage.Url'); background-size: cover; background-position: center;">
        <div class="absolute inset-0 bg-gradient-to-r from-gray-900/70 to-gray-900/30"></div>
        <div class="container mx-auto px-4 relative z-10">
            <div class="max-w-3xl mx-auto text-center animate-fade-in">
                @if (!string.IsNullOrWhiteSpace(Model.Title))
                {
                    <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-white mb-6">@Model.Title</h1>
                }
                @if (!string.IsNullOrWhiteSpace(Model.Description))
                {
                    <p class="text-xl text-gray-200 mb-8 leading-relaxed">@Model.Description</p>
                }
                <div class="flex flex-col sm:flex-row gap-4 justify-center">
                    @if (Model.PrimaryCallToActionLink is not null)
                    {
                        <a href="@Model.PrimaryCallToActionLink.Url"
                            class="bg-primary text-white px-8 py-3 !rounded-button font-medium hover:bg-opacity-90 transition-colors duration-200 whitespace-nowrap">@Model.PrimaryCallToActionLink.Name</a>
                    }
                    @if (Model.SecondaryCallToActionLink is not null)
                    {
                        <a href="@Model.SecondaryCallToActionLink.Url" target="@Model.SecondaryCallToActionLink.Target"
                            class="bg-white bg-opacity-10 text-white border border-white border-opacity-30 px-8 py-3 !rounded-button font-medium hover:bg-opacity-20 transition-colors duration-200 whitespace-nowrap">
                            @Model.SecondaryCallToActionLink.Name</a>
                    }
                </div>
            </div>
        </div>
    </section>
}